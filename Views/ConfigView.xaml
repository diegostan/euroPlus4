<Page x:Class="euroPlus4_1.Views.ConfigView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d"
      d:DesignHeight="698" d:DesignWidth="1146"
      
      Title="ConfigView">

    <Page.Resources>

    </Page.Resources>

    <Grid Height="698">
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="1146" Height="698">
            <StackPanel Height="45" HorizontalAlignment="Stretch"  Width="1148" Margin="-1 0 0 0">
                <TextBlock Margin="10" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" Foreground="White">Configurações</TextBlock>
            </StackPanel>


            <materialDesign:TransitioningContent Padding="0" Height="653">
                <materialDesign:TransitioningContent.OpeningEffects >
                    <materialDesign:TransitionEffect Kind="FadeIn" Duration="0:0:0.8"/>
                </materialDesign:TransitioningContent.OpeningEffects>
                <Grid Margin="10">
                    
                        <controls:MetroAnimatedTabControl Background="{x:Null}" x:Name="menu" controls:TabControlHelper.Underlined="TabPanel">
                        <!-- Aba de configuração de máquina  -->
                            <controls:MetroTabItem Header=" máquina " IsSelected="True" Background="{x:Null}" >
                            <StackPanel Height="584" Margin="10" Orientation="Horizontal">
                                <StackPanel Width="900">
                                    <TextBlock Margin="5" FontSize="18" FontWeight="SemiBold" Foreground="White">Informações iniciais</TextBlock>
                                    <TextBlock Margin="5" FontWeight="Light" Foreground="White">Nome da máquina</TextBlock>
                                    <TextBox Text="{Binding ConfigMaquinaModel.NomeDaMaquina}" controls:TextBoxHelper.SelectAllOnFocus="True" controls:TextBoxHelper.ClearTextButton="True" Width="350" HorizontalAlignment="Left" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"></TextBox>
                                    <TextBlock Margin="5" FontWeight="Light" Foreground="White">Posição na planta</TextBlock>
                                    <TextBox Text="{Binding ConfigMaquinaModel.PosicaoNaPlanta}" controls:TextBoxHelper.SelectAllOnFocus="True" controls:TextBoxHelper.ClearTextButton="True" Width="350" HorizontalAlignment="Left" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"></TextBox>
                                    <TextBlock Margin="5" FontWeight="Light" Foreground="White">Número de série</TextBlock>
                                    <TextBox Text="{Binding ConfigMaquinaModel.NumeroDeSerie}"  controls:TextBoxHelper.SelectAllOnFocus="True" controls:TextBoxHelper.ClearTextButton="True" Width="350" HorizontalAlignment="Left" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"></TextBox>
                                    <TextBlock Margin="5" FontWeight="Light" Foreground="White">Tensão de entrada (em volts)</TextBlock>
                                    <ComboBox  controls:TextBoxHelper.SelectAllOnFocus="True"  Width="350" HorizontalAlignment="Left" ItemsSource="{Binding ConfigMaquinaModel.TensaoDeEntrada}"  SelectedIndex="{Binding ConfigMaquinaModel.TensaoDeEntradaSelecionado}" ></ComboBox>
                                    <TextBlock  Margin="5" FontWeight="Light" Foreground="White">Fabricante</TextBlock>
                                    <TextBox Text="{Binding ConfigMaquinaModel.Fabricante}" controls:TextBoxHelper.SelectAllOnFocus="True" controls:TextBoxHelper.ClearTextButton="True" Width="350" HorizontalAlignment="Left" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"></TextBox>
                                    <TextBlock Margin="5" FontWeight="Light" Foreground="White">Ano de fabricação</TextBlock>
                                    <DatePicker SelectedDate="{Binding ConfigMaquinaModel.AnoDeFabricacao}" Width="350" HorizontalAlignment="Left" controls:TextBoxHelper.Watermark="Escolha a data" InputScope="Date" SelectedDateFormat="Short"></DatePicker>
                                    <TextBlock Margin="5" FontWeight="Light" Foreground="White">Tipo de aplicação</TextBlock>
                                    <ComboBox Width="350" HorizontalAlignment="Left" ItemsSource="{Binding ConfigMaquinaModel.TipoDeAplicacao}" SelectedIndex="{Binding ConfigMaquinaModel.TipoDeAplicacaoSelecionado}" ></ComboBox>

                                    <StackPanel Orientation="Horizontal" Margin="0 20 0 0" VerticalAlignment="Center">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock  FontWeight="Medium"  FontSize="12" Foreground="White">Salvar os dados</TextBlock>
                                            <TextBlock  FontWeight="Light" FontSize="12" Foreground="White">Após as alterações, salve os dados</TextBlock>
                                        </StackPanel>
                                        <Button BorderThickness="0.1" Height="auto"  FontSize="16" FontWeight="Medium" HorizontalAlignment="Left" Margin="10 0 0 0" Width="auto" Opacity="0.66" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}" Foreground="White" Command="{Binding SalvarDadosDaMaquina}">
                                            <Button.Content>
                                                <StackPanel Orientation="Horizontal" Margin="0">
                                                    <iconPacks:PackIconMaterial HorizontalAlignment="Center" Margin="8" Kind="ContentSaveAll" Foreground="White" Width="25" Height="25"/>
                                                    <TextBlock Margin="5" VerticalAlignment="Center">Salvar dados</TextBlock>
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                    </StackPanel>
                                
                            </StackPanel>

                                <StackPanel Width="206">
                                    <StackPanel Margin="5" Orientation="Horizontal" HorizontalAlignment="Left">
                                        <materialDesign:PackIcon Kind="Tools" Height="20" Width="20" Foreground="White" VerticalAlignment="Center"/>
                                        <TextBlock Margin="5" FontWeight="Medium" FontSize="12" Foreground="White" VerticalAlignment="Center">Obtenhá-se atualizado</TextBlock>
                                    </StackPanel>
                                    <TextBlock TextAlignment="Left" Margin="5" FontWeight="Light" FontSize="11" Foreground="White" TextWrapping="Wrap">Mantenha as informações de máquina sempre atualizadas, isso ajuda o euroPlus a sempre obter as melhores atualizações para seu equipamento, não esqueça de salvar as alterações após fazê-las.</TextBlock>

                                    <StackPanel Margin="5 20 0 0 " Orientation="Horizontal" HorizontalAlignment="Left">
                                        <materialDesign:PackIcon Kind="ViewDashboard" Height="20" Width="20" Foreground="White" VerticalAlignment="Center"/>
                                        <TextBlock Margin="5" FontWeight="Medium" FontSize="12" Foreground="White" VerticalAlignment="Center">Dashboard</TextBlock>
                                    </StackPanel>
                                    <TextBlock TextAlignment="Left" Margin="5" FontWeight="Light" FontSize="11" Foreground="White" TextWrapping="Wrap">Apresente os dados de fabricante e modelo da máquina na tela de visão geral.</TextBlock>

                                </StackPanel>

                            </StackPanel>
                        </controls:MetroTabItem>
                        <!-- Aba de configuração de sistema  -->
                        <controls:MetroTabItem Header=" sistema " Background="{x:Null}"  >
                            <ScrollViewer Margin="10,10,-10,-10"  VerticalScrollBarVisibility="Auto" Height="auto" CanContentScroll="True" >
                                <StackPanel Height="auto" Margin="00 0 0 0 "  Orientation="Horizontal">

                                    <StackPanel Width="900">
                                        <TextBlock Margin="5" FontSize="18" FontWeight="SemiBold" Foreground="White">Informações de software</TextBlock>
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel Width="180">
                                                <TextBlock Margin="5" FontWeight="Light" Foreground="White">Número de série do euroPlus:</TextBlock>
                                                <TextBlock Margin="5" FontWeight="Light" Foreground="White">Firmware do PLC:</TextBlock>
                                                <TextBlock Margin="5" FontWeight="Light" Foreground="White">Data atualização:</TextBlock>
                                                <TextBlock Margin="5" FontWeight="Light" Foreground="White">Fabricante PLC:</TextBlock>
                                            </StackPanel>
                                            <StackPanel>
                                                <TextBlock Margin="5" FontWeight="Medium" Foreground="DarkGray">KFJF3-JG9H3-NGKBO-D3NDM-JDNHR</TextBlock>
                                                <TextBlock Margin="5" FontWeight="Medium" Foreground="DarkGray">ER 202012.34 SE</TextBlock>
                                                <TextBlock Margin="5" FontWeight="Medium" Foreground="DarkGray">01/07/2020</TextBlock>
                                                <TextBlock Margin="5" FontWeight="Medium" Foreground="DarkGray">BECKHOFF AUTOMAÇÃO IND.</TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                        <TextBlock Margin="5 20 0 5 " FontSize="18" FontWeight="SemiBold" Foreground="White">Especificações do dispositivo</TextBlock>
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel Width="180">
                                                <TextBlock Margin="5" FontWeight="Light" Foreground="White">Nome do dispositivo:</TextBlock>
                                                <TextBlock Margin="5" FontWeight="Light" Foreground="White">Processador:</TextBlock>
                                                <TextBlock Margin="5" FontWeight="Light" Foreground="White">Memória instalada:</TextBlock>
                                                <TextBlock Margin="5" FontWeight="Light" Foreground="White">Nome da BIOS:</TextBlock>
                                                <TextBlock Margin="5" FontWeight="Light" Foreground="White">ID do produto:</TextBlock>
                                                <TextBlock Margin="5" FontWeight="Light" Foreground="White">Tipo de sistema:</TextBlock>
                                                <TextBlock Margin="5" FontWeight="Light" Foreground="White">Tamanho do disco:</TextBlock>
                                            </StackPanel>
                                            <StackPanel>
                                                <TextBlock Margin="5" FontWeight="Medium" Foreground="DarkGray" Text="{Binding NomeDispositivo}"></TextBlock>
                                                <TextBlock Margin="5" FontWeight="Medium" Foreground="DarkGray" Text="{Binding Processador}"></TextBlock>
                                                <TextBlock Margin="5" FontWeight="Medium" Foreground="DarkGray" Text="{Binding MemoriaInstalada}"></TextBlock>
                                                <TextBlock Margin="5" FontWeight="Medium" Foreground="DarkGray" Text="{Binding NomeBIOS}"></TextBlock>
                                                <TextBlock Margin="5" FontWeight="Medium" Foreground="DarkGray" Text="{Binding IDdoProduto}"></TextBlock>
                                                <TextBlock Margin="5" FontWeight="Medium" Foreground="DarkGray" Text="{Binding TipoSistema}"></TextBlock>
                                                <TextBlock Margin="5" FontWeight="Medium" Foreground="DarkGray" Text="{Binding TamanhoDisco}"></TextBlock>
                                            </StackPanel>

                                        </StackPanel>
                                        <TextBlock Margin="5 20 0 5 " FontSize="18" FontWeight="SemiBold" Foreground="White">Configurações do euroPlus</TextBlock>
                                        <StackPanel Margin="0 10 0 20">
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Margin="5" FontWeight="Medium" Foreground="White" FontSize="14">Tema:</TextBlock>
                                                <ComboBox ItemsSource="{Binding ConfigSistemaModel.TemasDisponiveis}"  Width="438" Height="40" HorizontalAlignment="Left" Style="{DynamicResource MahApps.Styles.ComboBox.Virtualized}" BorderBrush="#FFDEDEDE" Text="{Binding ModoEscuro}" SelectedIndex="{Binding ConfigSistemaModel.TemaSelecionado}"/>

                                                <CheckBox Margin=" 2 15 0 5" FontWeight="Bold" Content="Aplicar modo escuro automaticamente " Style="{DynamicResource MahApps.Styles.CheckBox.DataGrid.}" Foreground="White" Background="White" BorderBrush="#FFB2B2B2" IsChecked="{Binding ConfigSistemaModel.AplicarModoEscuroAutomaticamente}"></CheckBox>
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Margin="5" FontWeight="Light" Foreground="White">Inicio</TextBlock>
                                                    <mah:TimePicker SelectedDateTime="{Binding ConfigSistemaModel.HoraInicial}" SelectedTimeFormat="Short" Culture="pt-BR" mah:TextBoxHelper.Watermark="Hora inicial" Width="438" Height="40" HorizontalAlignment="Left" IsEnabled="{Binding ConfigSistemaModel.AplicarModoEscuroAutomaticamente}" ></mah:TimePicker>
                                                    <TextBlock Margin="5" FontWeight="Light" Foreground="White">Termino</TextBlock>
                                                    <mah:TimePicker SelectedDateTime="{Binding ConfigSistemaModel.HoraFinal}" SelectedTimeFormat="Short" Culture="pt-BR" mah:TextBoxHelper.Watermark="Hora final" Width="438" Height="40" HorizontalAlignment="Left" IsEnabled="{Binding ConfigSistemaModel.AplicarModoEscuroAutomaticamente}"></mah:TimePicker>
                                                </StackPanel>
                                                <TextBlock Margin="5" FontWeight="Medium" Foreground="White" FontSize="14">Selecionar cor de destaque:</TextBlock>

                                                <ComboBox   Width="438" Height="40" ItemsSource="{Binding ConfigSistemaModel.CoresDisponiveis}" HorizontalAlignment="Left" Style="{DynamicResource MahApps.Styles.ComboBox.Virtualized}" BorderBrush="#FFDEDEDE" Text="{Binding CorDeDestaque}" SelectedIndex="{Binding ConfigSistemaModel.CorDeDestaqueSelecionado}"/>

                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin=" 0 0 0 10">
                                        <StackPanel VerticalAlignment="Center">
                                                <TextBlock  FontWeight="Medium"   Foreground="White">Salve o tema selecionado</TextBlock>
                                        <TextBlock  FontWeight="Light" Foreground="White">Após as alterações, confira e salve das suas cores</TextBlock>
                                        </StackPanel>
                                            <Button BorderThickness="0.1" Height="auto"  FontSize="16" FontWeight="Medium" HorizontalAlignment="Left" Margin="25 0 0 0" Width="auto" Opacity="0.66" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}" Command="{Binding SelecionarTema}" Foreground="White" >
                                            <Button.Content>
                                                <StackPanel Orientation="Horizontal" Margin="0">
                                                    <iconPacks:PackIconMaterial HorizontalAlignment="Center" Margin="8" Kind="Brush" Foreground="White" Width="25" Height="25"/>
                                                        <TextBlock Margin="5" VerticalAlignment="Center">Aplicar tema</TextBlock>
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                         </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0 0 0 20" VerticalAlignment="Center">
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock  FontWeight="Medium"   Foreground="White">Salvar os dados</TextBlock>
                                                <TextBlock  FontWeight="Light" Foreground="White">Após as alterações, salve os dados</TextBlock>
                                            </StackPanel>
                                            <Button BorderThickness="0.1" Height="auto"  FontSize="16" FontWeight="Medium" HorizontalAlignment="Left" Margin="98 0 0 0" Width="auto" Opacity="0.66" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}" Foreground="White" Command="{Binding SalvarDadosDaMaquina}">
                                                <Button.Content>
                                                    <StackPanel Orientation="Horizontal" Margin="0">
                                                        <iconPacks:PackIconMaterial HorizontalAlignment="Center" Margin="8" Kind="ContentSaveAll" Foreground="White" Width="25" Height="25"/>
                                                        <TextBlock Margin="5" VerticalAlignment="Center">Salvar dados</TextBlock>
                                                    </StackPanel>
                                                </Button.Content>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Width="206">
                                        <StackPanel Margin="5" Orientation="Horizontal" HorizontalAlignment="Left">
                                            <materialDesign:PackIcon Kind="SettingsApplications" Height="20" Width="20" Foreground="White" VerticalAlignment="Center"/>
                                            <TextBlock Margin="5" FontWeight="Medium" FontSize="12" Foreground="White" VerticalAlignment="Center">Informações de  sistema</TextBlock>
                                        </StackPanel>
                                        <TextBlock TextAlignment="Left" Margin="5" FontWeight="Light" FontSize="11" Foreground="White" TextWrapping="Wrap">Acompanhe e visualize as informações correntes do sistema instalado, assim como informações de CPU, memória e números de série do sistema e hardware.</TextBlock>

                                        <StackPanel Margin="5 20 0 0 " Orientation="Horizontal" HorizontalAlignment="Left">
                                            <materialDesign:PackIcon Kind="SettingsSync" Height="20" Width="20" Foreground="White" VerticalAlignment="Center"/>
                                            <TextBlock Margin="5" FontWeight="Medium" FontSize="12" Foreground="White" VerticalAlignment="Center">Configurar o euroPlus</TextBlock>
                                        </StackPanel>
                                        <TextBlock TextAlignment="Left" Margin="5" FontWeight="Light" FontSize="11" Foreground="White" TextWrapping="Wrap">Modifique aspectos e preferências do euroPlus além habilitar e desabilitar recursos do sistema de forma prática e rápida.</TextBlock>

                                    </StackPanel>

                                </StackPanel>
                            </ScrollViewer>
                        </controls:MetroTabItem>
                        <!-- Aba de configuração de comunicação  -->
                        <controls:MetroTabItem Header=" comunicação " Background="{x:Null}" HorizontalAlignment="Right" Width="182">
                            <ScrollViewer Margin="10,10,-10,-10"  VerticalScrollBarVisibility="Auto" Height="auto">
                                <StackPanel Height="auto" Margin="00 0 0 0 "  Orientation="Horizontal">
                                    <StackPanel Width="900">
                                        <controls:MetroAnimatedTabControl Background="{x:Null}" controls:TabControlHelper.Underlined="TabPanel" FontSize="8" TabStripPlacement="Top" >
                                            <controls:MetroTabItem Header=" ethernet " Background="{x:Null}" FontSize="8">
                                                <StackPanel>
                                                    
                                                    <TextBlock Margin="5" FontSize="18" FontWeight="SemiBold" Foreground="White">Configurações de canal</TextBlock>
                                                    <TextBlock FontSize="12" Margin="5" FontWeight="Light" Foreground="White">Protocolo</TextBlock>
                                                    <ComboBox ItemsSource="{Binding ConfigComunicacaoModel.ProtocoloEthernet}" SelectedIndex="{Binding ConfigComunicacaoModel.ProtocoloEthernetSelecionado}"  controls:TextBoxHelper.SelectAllOnFocus="True" Width="350" HorizontalAlignment="Left"></ComboBox>
                                                    <TextBlock FontSize="12" Margin="5" FontWeight="Light" Foreground="White">Endereço IP</TextBlock>
                                                    <TextBox Text="{Binding ConfigComunicacaoModel.EnderecoIP}"  controls:TextBoxHelper.SelectAllOnFocus="True" controls:TextBoxHelper.ClearTextButton="True" Width="350" HorizontalAlignment="Left" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"></TextBox>
                                                    <TextBlock FontSize="12" Margin="5" FontWeight="Light" Foreground="White">Porta</TextBlock>
                                                    <controls:NumericUpDown Value="{Binding ConfigComunicacaoModel.Porta}" controls:TextBoxHelper.SelectAllOnFocus="True" Maximum="9999" Width="350" HorizontalAlignment="Left" Height="40" FontSize="18" UpDownButtonsWidth="30" GotFocus="NumericUpDown_GotFocus" LostFocus="NumericUpDown_LostFocus"></controls:NumericUpDown>
                                                    <TextBlock FontSize="12" Margin="5" FontWeight="Light" Foreground="White">Tempo de atualização (milisegundo)</TextBlock>
                                                    <controls:NumericUpDown Value="{Binding ConfigComunicacaoModel.TempoLeituraEthernet}" controls:TextBoxHelper.SelectAllOnFocus="True" UpDownButtonsWidth="30" Minimum="50" Height="40" FontSize="18" Maximum="1000" Width="350" HorizontalAlignment="Left" GotFocus="NumericUpDown_GotFocus" LostFocus="NumericUpDown_LostFocus"></controls:NumericUpDown>
                                                    <Button BorderThickness="0.1" Height="auto"  FontSize="16" FontWeight="Medium" HorizontalAlignment="Left" Margin="0 20 0 0" Width="350" Opacity="0.66" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}" Foreground="White" Command="{Binding TestarConexaoEtherCAT}" >
                                                            <Button.Content>
                                                                <StackPanel Orientation="Horizontal" Margin="0">
                                                                    <iconPacks:PackIconMaterial HorizontalAlignment="Center" Margin="8" Kind="Ethernet" Foreground="White" Width="25" Height="25"/>
                                                                <TextBlock Margin="5" VerticalAlignment="Center">Salvar e testar comunicação</TextBlock>
                                                                </StackPanel>
                                                            </Button.Content>
                                                        </Button>
                                                    
                                                </StackPanel>
                                            </controls:MetroTabItem>
                                            <controls:MetroTabItem Header=" serial " Background="{x:Null}" FontSize="8">
                                                <StackPanel>
                                                    <TextBlock Margin="5" FontSize="18" FontWeight="SemiBold" Foreground="White">Configurações de porta</TextBlock>
                                                    <TextBlock FontSize="12" Margin="5" FontWeight="Light" Foreground="White">Protocolo</TextBlock>
                                                    <ComboBox ItemsSource="{Binding ConfigComunicacaoModel.ProtocoloSerial}" SelectedIndex="{Binding ConfigComunicacaoModel.ProtocoloSerialSelecionado}"  controls:TextBoxHelper.SelectAllOnFocus="True" Width="350" HorizontalAlignment="Left"></ComboBox>
                                                    <TextBlock FontSize="12" Margin="5" FontWeight="Light" Foreground="White">BaudRate</TextBlock>
                                                    <ComboBox ItemsSource="{Binding ConfigComunicacaoModel.BaudRate}" SelectedIndex="{Binding ConfigComunicacaoModel.BaudRateSelecionado}"  controls:TextBoxHelper.SelectAllOnFocus="True" Width="350" HorizontalAlignment="Left"></ComboBox>
                                                    <TextBlock FontSize="12" Margin="5" FontWeight="Light" Foreground="White">Stop bit</TextBlock>
                                                    <ComboBox ItemsSource="{Binding ConfigComunicacaoModel.StopBit}" SelectedIndex="{Binding ConfigComunicacaoModel.StopBitSelecionado}"  controls:TextBoxHelper.SelectAllOnFocus="True" Width="350" HorizontalAlignment="Left"></ComboBox>
                                                    <TextBlock FontSize="12" Margin="5" FontWeight="Light" Foreground="White">Paridade</TextBlock>
                                                    <ComboBox ItemsSource="{Binding ConfigComunicacaoModel.Paridade}" SelectedIndex="{Binding ConfigComunicacaoModel.ParidadeSelecionado}"  controls:TextBoxHelper.SelectAllOnFocus="True" Width="350" HorizontalAlignment="Left"></ComboBox>
                                                    <TextBlock FontSize="12" Margin="5" FontWeight="Light" Foreground="White">Número da estação</TextBlock>
                                                    <TextBox Text="{Binding ConfigComunicacaoModel.NumeroEstacao}"  controls:TextBoxHelper.SelectAllOnFocus="True" controls:TextBoxHelper.ClearTextButton="True" Width="350" HorizontalAlignment="Left" GotFocus="NumericUpDown_GotFocus" LostFocus="NumericUpDown_LostFocus"></TextBox>
                                                    <Button BorderThickness="0.1" Height="auto"  FontSize="16" FontWeight="Medium" HorizontalAlignment="Left" Margin="0 20 0 0" Width="350" Opacity="0.66" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}" Foreground="White" >
                                                        <Button.Content>
                                                            <StackPanel Orientation="Horizontal" Margin="0">
                                                                <iconPacks:PackIconMaterial HorizontalAlignment="Center" Margin="8" Kind="SerialPort" Foreground="White" Width="25" Height="25"/>
                                                                <TextBlock Margin="5" VerticalAlignment="Center">Salvar e testar comunicação</TextBlock>
                                                            </StackPanel>
                                                        </Button.Content>
                                                    </Button>
                                                    
                                                    <StackPanel Orientation="Horizontal" Margin="0 20 0 0" VerticalAlignment="Center">
                                                        <StackPanel VerticalAlignment="Center">
                                                            <TextBlock  FontWeight="Medium" FontSize="12"  Foreground="White">Salvar os dados</TextBlock>
                                                            <TextBlock  FontWeight="Light" FontSize="12" Foreground="White">Após as alterações, salve os dados</TextBlock>
                                                        </StackPanel>
                                                        <Button BorderThickness="0.1" Height="auto"  FontSize="16" FontWeight="Medium" HorizontalAlignment="Left" Margin="10 0 0 0" Width="auto" Opacity="0.66" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}" Foreground="White" Command="{Binding SalvarDadosDaMaquina}">
                                                            <Button.Content>
                                                                <StackPanel Orientation="Horizontal" Margin="0">
                                                                    <iconPacks:PackIconMaterial HorizontalAlignment="Center" Margin="8" Kind="ContentSaveAll" Foreground="White" Width="25" Height="25"/>
                                                                    <TextBlock Margin="5" VerticalAlignment="Center">Salvar dados</TextBlock>
                                                                </StackPanel>
                                                            </Button.Content>
                                                        </Button>
                                                    </StackPanel>

                                                </StackPanel>
                                            </controls:MetroTabItem>
                                            <controls:MetroTabItem Header=" variáveis " IsEnabled="False" Background="{x:Null}" FontSize="8">
                                                <StackPanel>
                                                    <TextBlock Margin="5" FontSize="18" FontWeight="SemiBold" Foreground="White">Controle de variáveis do sistema remoto</TextBlock>
                                                    <TextBlock FontSize="12" Margin="5" FontWeight="Light" Foreground="White">Tipo de variável</TextBlock>
                                                    <ComboBox  controls:TextBoxHelper.SelectAllOnFocus="True" Width="350" HorizontalAlignment="Left" Height="20">
                                                        <ComboBoxItem  Content="discreto" IsSelected="True"/>
                                                        <ComboBoxItem Content="inteiro"/>
                                                        <ComboBoxItem Content="string" Height="auto"/>
                                                    </ComboBox>
                                                    <TextBlock FontSize="12" Margin="5" FontWeight="Light" Foreground="White">Canal</TextBlock>
                                                    <ComboBox  controls:TextBoxHelper.SelectAllOnFocus="True" Width="350" HorizontalAlignment="Left" Height="20">
                                                        <ComboBoxItem Content="ethernet" IsSelected="True"/>
                                                        <ComboBoxItem Content="serial"/>
                                                    </ComboBox>
                                                    <TextBlock FontSize="12" Margin="5" FontWeight="Light" Foreground="White">Nome da variável (sem espaço)</TextBlock>
                                                    <TextBox  controls:TextBoxHelper.SelectAllOnFocus="True" controls:TextBoxHelper.ClearTextButton="True" Width="350" HorizontalAlignment="Left"></TextBox>
                                                    <TextBlock FontSize="12" Margin="5" FontWeight="Light" Foreground="White">Endereço no controlador (ou nome de variável do controlador)</TextBlock>
                                                    <TextBox  controls:TextBoxHelper.SelectAllOnFocus="True" controls:TextBoxHelper.ClearTextButton="True" Width="350" HorizontalAlignment="Left"></TextBox>

                                                    <Button Command="{Binding AdicionarVariavel}" BorderThickness="0.1" Height="auto"  FontSize="16" FontWeight="Medium" HorizontalAlignment="Left" Margin="0 20 0 10" Width="350" Opacity="0.66" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}" Foreground="White" >
                                                        <Button.Content>
                                                            <StackPanel Orientation="Horizontal" Margin="0">
                                                                <iconPacks:PackIconMaterial HorizontalAlignment="Center" Margin="8" Kind="VariableBox" Foreground="White" Width="25" Height="25"/>
                                                                <TextBlock Margin="5" VerticalAlignment="Center">Criar variável</TextBlock>
                                                            </StackPanel>
                                                        </Button.Content>
                                                    </Button>

                                                    <TextBlock Margin="5" FontSize="18" FontWeight="SemiBold" Foreground="White">Remover variáveis do sistema remoto</TextBlock>

                                                    <TextBlock FontSize="12" Margin="5" FontWeight="Light" Foreground="White">ID da variável a ser removida</TextBlock>
                                                    <controls:NumericUpDown  controls:TextBoxHelper.SelectAllOnFocus="True" Minimum="0" Width="350" HorizontalAlignment="Left"></controls:NumericUpDown>

                                                    <Button Command="{Binding RemoverVariavel}" BorderThickness="0.1" Height="auto"  FontSize="16" FontWeight="Medium" HorizontalAlignment="Left" Margin="0 20 0 10" Width="350" Opacity="0.66" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}" Foreground="White" >
                                                        <Button.Content>
                                                            <StackPanel Orientation="Horizontal" Margin="0">
                                                                <iconPacks:PackIconMaterial HorizontalAlignment="Center" Margin="8" Kind="Eraser" Foreground="White" Width="25" Height="25"/>
                                                                <TextBlock Margin="5" VerticalAlignment="Center">Remover variável</TextBlock>
                                                            </StackPanel>
                                                        </Button.Content>
                                                    </Button>

